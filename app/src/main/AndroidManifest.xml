<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jamtech.jobinfo" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/jobinfoicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jamtech.jobinfo.activity.MainActivity"
            android:label="@string/app_name"
                     >
            <intent-filter>
                <action android:name="com.jamtech.jobinfo.activity.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jamtech.jobinfo.activity.Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jamtech.jobinfo.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.Dark" >
        </activity>
        <activity
            android:name="com.jamtech.jobinfo.activity.SignupActivity"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.Dark" >
        </activity>

    </application>

</manifest>
